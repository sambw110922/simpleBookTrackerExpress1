extends layout

block content

 div(class="hero")
  h1 Total books
  p Total books read and owned
  p Total: #{ totalBooks.booklist.length } 

 div
  ul(id="theRealBookList")
   each book in totalBooks.booklist
    li(class="bookItem")
     p(class="bookTitle") #{ book.bookTitle }
     p(class="bookAuthor") #{ book.bookAuthor }